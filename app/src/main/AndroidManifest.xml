<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a2travel">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_naranja"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyB1SS7N_0HusLZhoTjcVHKbJeq_BFKZyOc" />

        <activity
            android:name=".SplashScreenActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NuevoHotelActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_hotel"
            android:parentActivityName=".NuevoElementoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NuevoViajeActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_nuevo_viaje"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NuevoVueloActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vuelo"
            android:parentActivityName=".NuevoElementoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NuevoElementoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_nuevo_elemento"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NuevoMapaActivity"
            android:label="@string/title_activity_mapa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NuevaTareaActivity"
            android:label="@string/title_activity_nueva_tarea"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VistaMapaActivity"
            android:label="@string/title_activity_vista_mapa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PrediccionActivity"
            android:label="@string/title_activity_tiempo"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>