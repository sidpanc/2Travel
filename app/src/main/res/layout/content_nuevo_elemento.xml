<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_nuevo_elemento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.a2travel.NuevoElementoActivity"
    tools:showIn="@layout/activity_nuevo_elemento"
    android:stretchColumns="*"
    android:layout_weight="1" >

    <TableRow android:id="@+id/fila1"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/nuevo_elemento_block">

        <ImageButton
            android:id="@+id/button1"
            android:layout_height="match_parent"
            android:background="@drawable/item2_selector"
            android:onClick="onBtnVueloClick"
            android:scaleType="fitXY"
            android:src="@drawable/ic_flight_takeoff_black_24dp"
            android:tint="@color/colorPrimary"
            android:layout_marginRight="@dimen/nuevo_elemento_block"/>

        <ImageButton android:id="@+id/button2"
            android:layout_height="match_parent"
            android:onClick="onBtnHotelClick"
            android:background="@drawable/item1_selector"
            android:src="@drawable/ic_hotel_black_24dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY" />

    </TableRow>

    <TableRow android:id="@+id/fila3"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/nuevo_elemento_block">

        <ImageButton android:id="@+id/button3"
            android:onClick="onBtnNuevaTareaClick"
            android:layout_height="match_parent"
            android:background="@drawable/item1_selector"
            android:src="@drawable/ic_list_black_24dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/nuevo_elemento_block"/>

        <ImageButton android:id="@+id/button4"
            android:onClick="onBtnNuevoTransporteClick"
            android:layout_height="match_parent"
            android:background="@drawable/item2_selector"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY" />

    </TableRow>

    <TableRow android:id="@+id/fila5"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <ImageButton android:id="@+id/button5"
            android:layout_height="match_parent"
            android:onClick="onBtnMapaClick"
            android:background="@drawable/item2_selector"
            android:src="@drawable/ic_map_black_24dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/nuevo_elemento_block"
            />

        <ImageButton android:id="@+id/button6"
            android:onClick="onBtnNuevaPrediccionClick"
            android:layout_height="match_parent"
            android:background="@drawable/item1_selector"
            android:src="@drawable/ic_wb_sunny_black_24dp"
            android:tint="@color/colorPrimary"
            android:scaleType="fitXY" />

    </TableRow>

</TableLayout>