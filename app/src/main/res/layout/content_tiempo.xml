            <TextView
                android:id="@+id/tiempo_temp_actual6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tiempo_icono6"
                android:layout_toRightOf="@id/tiempo_dia5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp" />

            <TextView
                android:id="@+id/tiempo_humedad6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tiempo_dia5"
                android:layout_below="@+id/tiempo_temp_actual6"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp" />

        </RelativeLayout>

    </HorizontalScrollView>

</RelativeLayout>
