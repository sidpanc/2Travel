<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a2travel.ListaViajeFragment">

    <TextView android:id="@+id/backgroundText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorAccent" />

    <TextView
        android:text="Destino: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:id="@+id/txt_lv_destino_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_lv_destino_label"
        android:layout_toEndOf="@+id/txt_lv_destino_label"
        android:layout_marginStart="12dp"

        android:id="@+id/txt_lv_destino" />

    <TextView
        android:text="Salida:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lv_destino_label"
        android:layout_alignStart="@+id/txt_lv_destino_label"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:id="@+id/txt_lv_fechaSalida_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_lv_fechaSalida_label"
        android:layout_alignStart="@+id/txt_lv_destino"
        android:id="@+id/txt_lv_fechaSalida" />

    <TextView
        android:text="Regreso:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_lv_fechaSalida_label"
        android:layout_alignStart="@+id/txt_lv_fechaSalida_label"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:id="@+id/txt_lv_fechaRegreso_label" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_lv_fechaRegreso_label"
        android:layout_alignStart="@+id/txt_lv_fechaSalida"
        android:id="@+id/txt_lv_fechaRegreso" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/backgroundText"
        android:layout_marginTop="36dp"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <ListView
            android:id="@+id/lista_elementos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"/>
        <!--
        <TextView
            android:text="No hay elementos aÃºn."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignStart="@+id/textView2"
            android:id="@+id/txt_lv_no_hay_elementos" />
        -->

    </LinearLayout>

</RelativeLayout>
