<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_hotel_icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_marginStart="@dimen/list_item_icon_left_margin"
        android:layout_marginTop="@dimen/list_item_top_bottom_margin"
        android:src="@drawable/ic_hotel_black_24dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_list_hotel_fechain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha check in"
        android:layout_alignTop="@+id/img_hotel_icon"
        android:layout_toEndOf="@id/img_hotel_icon"
        android:layout_marginStart="@dimen/list_item_nombre_margin" />

    <TextView
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:layout_alignBaseline="@+id/txt_list_hotel_fechain"
        android:layout_alignBottom="@+id/txt_list_hotel_fechain"
        android:layout_toEndOf="@+id/txt_list_hotel_fechain" />

    <TextView
        android:id="@+id/txt_list_hotel_fechaout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha check out"
        android:layout_alignBaseline="@+id/separator"
        android:layout_alignBottom="@+id/separator"
        android:layout_toEndOf="@+id/separator" />

    <TextView
        android:id="@+id/txt_list_hotel_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre Hotel"
        android:maxLength="14"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/list_item_top_bottom_margin"
        android:layout_below="@+id/txt_list_hotel_fechain"
        android:layout_alignStart="@+id/txt_list_hotel_fechain" />

    <TextView
        android:id="@+id/separator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_list_hotel_nombre"
        android:layout_alignBottom="@+id/txt_list_hotel_nombre"
        android:layout_alignTop="@id/txt_list_hotel_nombre"
        android:layout_toEndOf="@+id/txt_list_hotel_nombre"
        android:text=" - " />

    <TextView
        android:id="@+id/txt_list_hotel_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direccion Hotel"
        android:maxLength="14"
        android:layout_alignBaseline="@+id/separator2"
        android:layout_alignBottom="@+id/separator2"
        android:layout_alignTop="@id/separator2"
        android:layout_toEndOf="@+id/separator2" />

</RelativeLayout>