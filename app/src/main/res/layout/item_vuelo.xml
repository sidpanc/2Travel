<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_vuelo_icon"
        android:layout_width="@dimen/list_item_icon_size"
        android:layout_height="@dimen/list_item_icon_size"
        android:layout_marginStart="@dimen/list_item_icon_left_margin"
        android:src="@drawable/ic_flight_takeoff_black_24dp"
        android:layout_marginTop="@dimen/list_item_top_bottom_margin"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_list_vuelo_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identificador del vuelo"
        android:layout_marginStart="@dimen/list_item_nombre_margin"
        android:layout_alignTop="@id/img_vuelo_icon"
        android:layout_toEndOf="@+id/img_vuelo_icon" />

    <TextView
        android:id="@+id/txt_list_vuelo_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del vuelo"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/txt_list_vuelo_id"
        android:layout_alignStart="@+id/txt_list_vuelo_id"
        android:layout_marginBottom="@dimen/list_item_top_bottom_margin"/>

</RelativeLayout>